@model IEnumerable<VerificarLogin.Models.Medico>

@{
    ViewBag.Title = "Guia Médico";
}

@using (Html.BeginForm())
{


@Html.AntiForgeryToken()
    <body>

        <h2>Guia Médico - CadêMeuMédico?</h2>

        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-3 col-md-offset-4">
                    <form action="" class="search-form">
                        <div class="form-group has-feedback">
                            <label for="search" class="sr-only">Search</label>
                            <input type="text" class="form-control" name="texto" id="texto" placeholder="Pesquisa" />
                            <span class="glyphicon glyphicon-search form-control-feedback"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Especialidade.Especialidades)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CRM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WebSite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AtendePorConvenio)
                </th>
                <th></th>
            </tr>

            @{ 
                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especialidade.Especialidades)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CRM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebSite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AtendePorConvenio)
                    </td>
                    <td>

                        @Html.ActionLink("+ Detalhes", "Details", new { id = item.Id })

                    </td>
                </tr>
                        }
                    }
                }
        </table>
    </body>
}
  
